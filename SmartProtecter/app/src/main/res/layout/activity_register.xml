<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0f0f0"
              tools:context="com.example.smartprotector.Activities.RegisterActivity"
              android:orientation="vertical">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/btn_backToLogin"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/register_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"></ImageButton>

        <TextView
            android:textSize="25dp"
            android:textColor="#00b7ee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="用户注册"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"/>
    </RelativeLayout>

    <TextView
        android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/register_rect"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#b0b0b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_vertical"
                android:text="手机号"/>

            <EditText
                android:paddingLeft="20dp"
                android:id="@+id/edt_phoneNumber"
                android:layout_width="200dp"
                android:background="@null"
                android:textColor="#000000"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:background="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#b0b0b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_vertical"
                android:text="验证码"/>

            <EditText
                android:id="@+id/edt_yanzhengma"
                android:layout_width="180dp"
                android:background="@null"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"/>

            <Button
                android:background="@mipmap/register_getyzm"
                android:id="@+id/btn_getYanzhengma"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"

                android:layout_gravity="center_vertical"
                android:text="获取验证码"/>

        </LinearLayout>

        <TextView
            android:background="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#b0b0b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_vertical"
                android:text="密码"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/edt_setPassword"
                android:layout_width="200dp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:background="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#b0b0b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_vertical"
                android:text="昵称"/>

            <EditText
                android:id="@+id/edt_nickname"
                android:layout_width="200dp"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp"

                android:background="@null"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:background="#c0c0c0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:textColor="#b0b0b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:layout_gravity="center_vertical"
                android:text="头像"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:id="@+id/linearLayout">

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_getIcon"
                android:background="@mipmap/register_icon"
                android:layout_width="70dp"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btn_setIcon"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="点击上传"
                android:textColor="#00b7ee"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2.42"
                android:background="@mipmap/register_seticon"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_toRegister"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:background="@mipmap/register_reg"
        android:text="注册"/>
</LinearLayout>
